<!-- Header-->
<header class='bg-dark py-5 header_container'>
    <div class='container px-4 px-lg-5 my-5'>
        <h1 class='title_form-homepage text-light'>ELEVATE YOUR EVERYDAY</h1>
        <form class='row g-3'>
            <div class='col-auto'>
                <label for='inputEmail' class='visually-hidden'>Email</label>
                <input
                    type='email'
                    name='email'
                    class='form-control'
                    id='inputEmail'
                    placeholder='Email Address'
                />
            </div>
            <div class='col-auto'>
                <button type='submit' class='btn btn-primary mb-3'>GET 10% OFF</button>
            </div>
        </form>
    </div>
</header>
<!-- Section-->
<section class='py-5'>
    <div class='container px-4 px-lg-5 mt-5'>
        <div
            class='row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center'
        >

            {{! product }}
            {{#each product}}
                <div class='col mb-5'>
                    <div class='card h-100'>
                        <!-- Sale badge-->
                        <div
                            class='badge bg-dark text-white position-absolute'
                            style='top: 0.5rem; right: 0.5rem'
                        >{{this.sale}}</div>
                        <!-- Product image-->
                        <a href="/homepage/{{this.slug}}">
                            <img class='card-img-top' src='{{this.img}}' alt='...' />
                        </a>
                        <!-- Product details-->
                        <div class='card-body p-4'>
                            <div class='text-center'>
                                <!-- Product name-->
                                <h5 class='fw-bolder'>{{this.name}}</h5>
                                <!-- Product reviews-->
                                <div
                                    class='d-flex justify-content-center small text-warning mb-2'
                                >
                                    <div
                                        class='bi-star-fill'
                                    >{{this.descript}}</div>

                                </div>
                                <!-- Product price-->
                                <span class='text-muted text-decoration-line-through' >$20.00</span> ${{this.price}}
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div
                            class='card-footer p-4 pt-0 border-top-0 bg-transparent'
                        >
                            <div class='text-center'><a
                                    class='btn btn-outline-dark mt-auto'
                                    href='#'
                                >Add to cart</a></div>
                        </div>
                    </div>
                </div>
            {{/each}}

        </div>
    </div>

